<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Click button and have fun!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="Simple Toast" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="Toast with Image" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="Custom Toast" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="Standart Notification" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="Custom Notification" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="TimePickerDialog" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="DatePickerDialog" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="AlertDialog" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="ProgressDialog" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMethod"
        android:text="PopupMenu" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
